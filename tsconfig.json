{
    "compilerOptions": {
      "allowJs": false,
      "useUnknownInCatchVariables": false,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "lib": ["es6", "dom", "es2016"],
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "rootDirs": ["src"],
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "typeRoots": ["./node_modules/@types/", "src/@types"]
    },
    "include": [
      "./**/*",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "*.js"
    ]
  }
  